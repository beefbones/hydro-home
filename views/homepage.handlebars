<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js"></script>

<div>
    <h2 class="inline">Today's Water Intake: </h2>
    <p id="consumption-today"></p>
</div>

<form id="water-consumption-form">
    <label for="water-input"><h2 class="inline">Add Water Intake (ounces):</h2></label>
    <input class="bg-slate-500 text-white" type="number" id="water-input" placeholder="8" />
    <button class="bg-blue-700 text-white" type="submit">Submit</button>
</form>

<div>
    <h2 class="inline">Today's Water Goal: </h2>
    <p id="todays-goal"></p>
</div>

<form id="water-goal-form">
    <label for="new-goal"><h2 class="inline">Set New Goal (ounces):</h2></label>
    <input class="bg-slate-500 text-white" type="number" id="new-goal" placeholder="64" />
    <button class="bg-blue-700 text-white" type="submit">Submit</button>
</form>

<div class="weeklyChartBox">
    <canvas id="weeklyChart"></canvas>
</div>

<script src="./js/barChart.js"></script>
